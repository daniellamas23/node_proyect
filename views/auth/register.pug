extends ../layout/index


block login
    .py-10
        h2.text-center.text-2xl.font-extrabold Inmobiliaria   
            span.font-normal Lamas
        h2.text-center.text-2xl.font-extrabold= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/register"  novalidate) 
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-3.font-bold(for="name") Ingresa tu nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="name" value= usuario ? usuario.name : '' )
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-3.font-bold(for="email") Ingresa tu Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu Email" type="email" name="email" value= usuario ? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-3.font-bold(for="password") Ingresa tu password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa un password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-3.font-bold(for="password2") Repite tu password
                        input#password2.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite el password" type="password" name="password2")       

                    div.flex.items-center.justify-between
                      a.block.text-sm.uppercase.text-gray-400.mb-3.font-bold(href="./login") Already have an account? Login
                      a.block.text-sm.uppercase.text-gray-400.mb-3.font-bold(href="./forgotpwd") Forgot Password?

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")
